<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Newboot pawns are blank synstructs -->

    <PawnKindDef Name="ABF_PlayerPawnKindBase_Synstruct_Newboot" ParentName="BasePlayerPawnKind" Abstract="True">
        <label>synstruct colonist</label>
        <defaultFactionType>PlayerColony</defaultFactionType>
		<backstoryFiltersOverride>
            <li>
                <categories>
                    <li>ABF_Synstruct_Blank</li>
                </categories>
            </li>
		</backstoryFiltersOverride>
		<maxGenerationAge>1</maxGenerationAge>
		<chemicalAddictionChance>0.00</chemicalAddictionChance>
		<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
		<initialResistanceRange>13~21</initialResistanceRange>
        <modExtensions>
            <li Class="ArtificialBeings.ABF_ArtificialPawnKindExtension">
                <pawnState>Blank</pawnState>
            </li>
        </modExtensions>
    </PawnKindDef>

	<!-- Refugee pawns are sapient synstructs -->

    <PawnKindDef Name="ABF_PlayerPawnKindBase_Synstruct_Refugee" ParentName="BasePlayerPawnKind" Abstract="True">
        <label>synstruct colonist</label>
        <defaultFactionType>PlayerColony</defaultFactionType>
		<minGenerationAge>20</minGenerationAge>
		<chemicalAddictionChance>0.00</chemicalAddictionChance>
		<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
        <initialResistanceRange>13~21</initialResistanceRange>
		<backstoryFiltersOverride>
		  <li>
			<categories>
			  <li>ABF_Synstruct_Generic</li>
			</categories>
		  </li>
		</backstoryFiltersOverride>
        <apparelTags>
            <li>IndustrialBasic</li>
        </apparelTags>
    </PawnKindDef>

</Defs>